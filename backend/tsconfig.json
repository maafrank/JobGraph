{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@jobgraph/common": ["./common/src"],
      "@jobgraph/common/*": ["./common/src/*"]
    }
  },
  "include": ["services/**/*", "common/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
